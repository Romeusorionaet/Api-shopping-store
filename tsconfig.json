{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": [".src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  }
}
